// Complemento9.cpp : main project file.

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	int N, r1, d, n, r2, C=0;
	cout<<"Ingrese el numero: ";
	cin>>N;
	while (N>0) {
	    r1=N%10;
		d=9-r1;
		n=n*10+d;
		N=N/10;
	}
	while (n>0) {
		r2=n%10;
		C=C*10+r2;
	    n=n/10;
	}
	cout<<"El complemento a 9 del numero es: ";
	cout<<C;
	getch();
}
